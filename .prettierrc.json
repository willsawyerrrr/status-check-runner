{
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "singleAttributePerLine": false,
    "overrides": [
        {
            "files": "**/*.html",
            "options": {
                "printWidth": 120
            }
        },
        {
            "files": "**/*.html.jinja",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": "**/*.yaml",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
